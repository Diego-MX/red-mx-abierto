.row
  %br

  - if @stages.any?
    .btn-group.btn-group-justified{ role: 'group' }
      - @stages.each do |stage|
        %a.btn.btn-default{'href' => "#tab#{stage.id}", 'data-toggle' => 'tab'}
          = stage.name
      -# %a.btn.btn-default{'href' => "#tabA", 'data-toggle' => 'tab'} A
      -# %a.btn.btn-default{'href' => "#tabB", 'data-toggle' => 'tab'} B
      -# %a.btn.btn-default{'href' => "#tabC", 'data-toggle' => 'tab'} C

    .tab-content
      - @stages.tap do |head, *body|
        -# First element should be selected
        .tab-pane.fade.in.active{ id: "tab#{head.id}" }
          = render 'steps_listing', steps: head.steps
          
        -# Remaining elements
        - body.each do |stage|
          .tab-pane.fade.in{ id: "tab#{stage.id}" }
            = render 'steps_listing', steps: stage.steps

  - else
    .jumbotron.text-center{ style: 'margin-top: 15px;' }
      %p= t('.no_stages')
