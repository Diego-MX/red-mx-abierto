= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'form-control' }, label_html: { style: 'margin-top:15px;' } }, html:  { class: 'form-signin' }) do |f|
  = f.error_notification
  %h2.form-signin-heading.text-muted.text-center= t('.sign_up')
  .form-inputs
    = f.input :email, label: t('.email'), required: true, autofocus: true
    = f.input :password, label: t('.password'), required: true, hint: ("Al menos #{@minimum_password_length} caracteres" if @validatable)
    = f.input :password_confirmation, label: t('.password_confirmation'), required: true


  .form-actions{ style: 'margin-top: 15px;'}
    = f.button :submit, t('.sign_up_button'), class: 'btn btn-block btn-success'
