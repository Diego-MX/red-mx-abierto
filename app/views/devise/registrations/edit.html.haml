= simple_form_for resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'form-control' }, label_html: { class: 'slight-top-margin'} }, html: { method: :put, class: 'form-signin' } do |f|
  = f.error_notification

  = f.input :current_password, required: true
  = f.input :password, autocomplete: "off", required: false
  = f.input :password_confirmation, required: false

  = f.button :submit, class: 'btn btn-block btn-success slight-top-margin'
