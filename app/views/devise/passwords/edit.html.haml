.form-signin
  %h3.text-center.text-muted= t('.change_your_password')
  = simple_form_for resource, as: resource_name, url: password_path(resource_name), defaults: { input_html: { class: 'form-control'}, label_html: { class: 'slight-top-margin' }}, html: { method: :put } do |f|
    = f.error_notification

    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token

    .form-inputs
      = f.input :password, required: true, autofocus: true
      = f.input :password_confirmation, required: true

    .form-actions
      = f.button :submit, t('helpers.submit.password.update'), class: 'btn btn-block btn-success'
