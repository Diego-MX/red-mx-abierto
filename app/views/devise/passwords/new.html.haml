.form-signin
  %h3.text-center.text-muted= t('.recover_your_password')
  = simple_form_for resource, as: resource_name, url: password_path(resource_name), defaults: { input_html: { class: 'form-control' }, label_html: { class: 'slight-top-margin'} }, html: { method: :post } do |f|
    = f.error_notification

    = f.input :email, as: :email, required: true, autofocus: true
    = f.button :submit, t('helpers.submit.password.create'), class: 'btn btn-block btn-success slight-top-margin'
