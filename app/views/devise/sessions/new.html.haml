= render "layouts/alert"
%div.row.padding-row
  %div.container
    %div.col-md-6.col-md-offset-3
      = simple_form_for resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' }, label_html: { style: 'margin-top:15px;' } }, html:  { class: 'form-signin' } do |f|
        %h2.form-signin-heading.text-muted.text-center= t('.log_in')
        .form-inputs
          = f.input :email, label: t('.email'), required: false, autofocus: true
          = f.input :password, label: t('.password'), required: false
        .form-actions.slight-top-margin
          = f.button :submit, t('.log_in_button'), class: 'btn btn-xl btn-success'
