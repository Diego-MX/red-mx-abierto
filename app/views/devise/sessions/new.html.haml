
= simple_form_for resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' }, label_html: { style: 'margin-top:15px;' } }, html:  { class: 'form-signin' } do |f|
  %h2.form-signin-heading.text-muted.text-center= t('.log_in')
  .form-inputs
    = f.input :email, required: false, autofocus: true
    = f.input :password, required: false
    -# = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

  .form-actions{ style: 'margin-top: 15px;'}
    = f.button :submit, "Log in", class: 'btn btn-block btn-success'

  -# = render "devise/shared/links"
