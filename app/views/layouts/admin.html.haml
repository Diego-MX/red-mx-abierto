%html
  %head
    %title Admin
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{ src: '//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-cookies.min.js' }
    = csrf_meta_tags
    = render 'layouts/shim'

  %body.no-padding-top{ 'ng-app' => 'redMxAbiertoApp', 'data-no-turbolink' => 'true' }
    = render 'layouts/header', custom_classes: 'azulado'
    .container
      = render 'layouts/alert'
      = yield
