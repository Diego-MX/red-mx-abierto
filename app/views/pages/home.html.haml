      %div
        %ul.card-miembros
          %li.avatar
            = image_tag 'placeholders/playa.jpg', class: 'img-circle'
          %li.estado
            Cancún, Q.R.
        %ul.card-miembros
          %li.avatar
            = image_tag 'placeholders/guadalajara.jpg', class: 'img-circle'
          %li.estado
            Guadalajara, Jal.
        %ul.card-miembros
          %li.avatar
            = image_tag 'placeholders/silla.jpg', class: 'img-circle'
          %li.estado
